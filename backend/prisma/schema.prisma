// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id                String             @id @unique
  email             String             @unique
  name              String
  password          String
}

model Products {
  id                String             @id @unique
  name              String
  desc              String             @db.VarChar(255)
  price             Decimal            @db.Decimal(15, 2)
  stock             Int
}